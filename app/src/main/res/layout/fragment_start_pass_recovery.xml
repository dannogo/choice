<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/profile_overview_there_are_no_dopes_button_width"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/start_pass_recovery_1"
        android:layout_gravity="center_horizontal"
        android:text="@string/start_pass_recovery_text"
        android:textColor="@color/start_login_hint_color"
        android:textSize="@dimen/start_login_forgot_password_text_size"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/start_pass_recovery_email_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/start_pass_recovery_2"
        android:background="@null"
        android:gravity="center_horizontal"
        android:hint="@string/start_pass_recovery_hint"
        android:singleLine="true"
        android:textColorHint="@color/start_login_hint_color"
        android:textColor="@color/white_text_color"
        android:textSize="@dimen/start_login_font_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/start_login_edittext_underline_margin"
        android:background="@color/start_login_hint_color" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/start_pass_recovery_submit_button"
        fancy:fb_defaultColor="@color/start_login_toolbar_fancy_button_color"
        fancy:fb_focusColor="#000"
        fancy:fb_iconPosition="left"
        fancy:fb_radius="@dimen/buttons_corner_radius"
        fancy:fb_text="@string/start_pass_recovery_submit_button_text"
        fancy:fb_textColor="@color/white_text_color"
        fancy:fb_textSize="@dimen/button_text_size"
        android:layout_width="@dimen/profile_overview_there_are_no_dopes_button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="@dimen/start_login_margin_3"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" />

</LinearLayout>