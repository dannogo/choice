<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_button_size"
    android:background="@color/main_activity_primary_color"
    app:theme="@style/ThemeOverlay.AppCompat.Dark"
    >

    <ImageButton
        android:id="@+id/left_button"
        android:layout_width="@dimen/toolbar_button_size"
        android:layout_height="@dimen/toolbar_button_size"
        android:background="@android:color/transparent"
        android:layout_gravity="left"
        android:src="@drawable/toolbar_settings_icon"
        android:adjustViewBounds="true"
        android:padding="@dimen/toolbar_button_padding"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        android:layout_marginRight="@dimen/toolbar_button_left_margin"
        />

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3 of 10"
        android:layout_gravity="center"
        android:textColor="@color/white_text_color"
        android:textSize="@dimen/toolbar_title_font_size"
        />

    <ImageButton
        android:id="@+id/right_button"
        android:layout_width="@dimen/toolbar_button_size"
        android:layout_height="@dimen/toolbar_button_size"
        android:background="@android:color/transparent"
        android:layout_gravity="right"
        android:src="@drawable/dir_message"
        android:adjustViewBounds="true"
        android:padding="@dimen/toolbar_button_padding"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        android:layout_marginRight="@dimen/toolbar_button_right_margin"
        />

    <ImageButton
        android:id="@+id/right_button_2"
        android:layout_width="@dimen/toolbar_button_size"
        android:layout_height="@dimen/toolbar_button_size"
        android:background="@android:color/transparent"
        android:layout_gravity="right"
        android:src="@drawable/toolbar_upload_icon_ios_style"
        android:adjustViewBounds="true"
        android:padding="@dimen/toolbar_button_padding"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        android:layout_marginRight="@dimen/toolbar_button_right_margin"
        android:visibility="gone"
        />

</android.support.v7.widget.Toolbar>